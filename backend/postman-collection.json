              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "notices", "{{noticeId}}"]
            }
          }
        },
        {
          "name": "Delete Notice (Admin Only)",
          "request": {
            "method": "DELETE",
            "header": [
