      "item": [
        {
          "name": "Get All Notices",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:5000/api/notices",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "notices"]
            }
          }
        },
        {
          "name": "Get Notice by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:5000/api/notices/{{noticeId}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "notices", "{{noticeId}}"]
            }
          }
        },
        {
          "name": "Create Notice (Admin Only)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Annual Holidays\",\n  \"date\": \"2025-12-25\",\n  \"type\": \"leave\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/notices",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "notices"]
            }
          }
        },
        {
